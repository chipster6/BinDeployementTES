# ============================================================================
# WASTE MANAGEMENT API ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Application
APP_NAME="Waste Management API"
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
CUSTOMER_PORTAL_URL=http://localhost:3002

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/waste_mgmt
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waste_mgmt
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=waste_mgmt:

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here_must_be_32_chars

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_key_here
SESSION_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true

# Security
BCRYPT_ROUNDS=12
MFA_ISSUER="Waste Management System"
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# File Upload & Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=waste-mgmt-files
AWS_S3_PHOTOS_BUCKET=waste-mgmt-photos
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# External API Keys - Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# External API Keys - Communication
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@waste-mgmt.com

# External API Keys - Mapping
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# External API Keys - Fleet Management
SAMSARA_API_TOKEN=your_samsara_api_token
SAMSARA_GROUP_ID=your_samsara_group_id

# External API Keys - Business Intelligence
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@waste-mgmt.com
SMTP_FROM_NAME="Waste Management System"

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_external_services

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_ROUTES=7200

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379/1
WORKER_CONCURRENCY=5

# AI/ML Service Integration
AI_SERVICE_URL=http://localhost:3002
AI_SERVICE_API_KEY=your_ai_service_api_key

# IoT Service Integration
IOT_SERVICE_URL=http://localhost:3003
IOT_SERVICE_API_KEY=your_iot_service_api_key
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Testing (only for test environment)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/waste_mgmt_test
TEST_REDIS_URL=redis://localhost:6379/15

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com

# Kubernetes Configuration (if using k8s)
K8S_NAMESPACE=waste-mgmt
K8S_SERVICE_ACCOUNT=waste-mgmt-api

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PROFILING=false