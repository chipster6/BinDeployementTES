{
  "name": "waste-management-recovery-monitoring",
  "version": "1.0.0",
  "description": "Continuous monitoring system for waste management system recovery phase",
  "main": "scripts/continuous-error-reporter.js",
  "scripts": {
    "start": "node scripts/continuous-error-reporter.js",
    "monitor": "node scripts/continuous-error-reporter.js --daemon",
    "validate-consistency": "node scripts/consistency-validator.js",
    "validate-progress": "node scripts/recovery-progress-validator.js",
    "monitor-recovery": "node scripts/monitor-recovery.js",
    "watch-consistency": "node scripts/consistency-validator.js --watch",
    "progress-continuous": "node scripts/recovery-progress-validator.js --continuous",
    "typecheck:baseline:save": "node scripts/ts-errors-baseline.js save",
    "typecheck:enforce": "node scripts/ts-errors-baseline.js enforce",
    "typecheck:modified": "node scripts/typecheck-modified.js"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.2.1",
    "chokidar": "^4.0.3",
    "dependency-cruiser": "^17.0.1",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.9.2",
    "winston": "^3.17.0"
  },
  "keywords": [
    "monitoring",
    "error-detection",
    "recovery",
    "waste-management",
    "claude-code"
  ],
