JWT_AUDIENCE=waste-management-users

# Encryption Configuration (Production)
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_ENCRYPTION_KEY
HASH_ROUNDS=12
SESSION_SECRET=REPLACE_WITH_64_CHAR_SESSION_SECRET

# TIERED RATE LIMITING (SECURITY HARDENED)
# Anonymous users: 100 requests/15 minutes
RATE_LIMIT_ANONYMOUS_WINDOW_MS=900000
RATE_LIMIT_ANONYMOUS_MAX_REQUESTS=100

# Authenticated users: 1000 requests/15 minutes  
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=1000

# Admin users: 5000 requests/15 minutes
RATE_LIMIT_ADMIN_WINDOW_MS=900000
RATE_LIMIT_ADMIN_MAX_REQUESTS=5000

# Critical endpoints: 10 requests/15 minutes
RATE_LIMIT_CRITICAL_WINDOW_MS=900000
RATE_LIMIT_CRITICAL_MAX_REQUESTS=10

# REQUEST SIZE LIMITS (SECURITY HARDENED)
REQUEST_SIZE_LIMIT_DEFAULT=1mb
REQUEST_SIZE_LIMIT_FILE_UPLOAD=10mb
REQUEST_SIZE_LIMIT_JSON=1mb
REQUEST_SIZE_LIMIT_URL_ENCODED=1mb
REQUEST_SIZE_LIMIT_AUTH=100kb
REQUEST_SIZE_LIMIT_EMERGENCY=50mb

# Production Security Settings
FORCE_HTTPS=true
TRUST_PROXY=true
SECURE_COOKIES=true
ENABLE_SWAGGER_UI=false
ENABLE_API_DOCS=false
DEBUG_SQL=false
LOG_LEVEL=info
MOCK_EXTERNAL_SERVICES=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true

# Background Jobs
QUEUE_REDIS_HOST=your_production_redis_host
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
ENABLE_QUEUE_DASHBOARD=false
QUEUE_DASHBOARD_PORT=3003

# WebSocket Configuration
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# External Services (Production)
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_KEY
TWILIO_ACCOUNT_SID=YOUR_PRODUCTION_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_PRODUCTION_TWILIO_TOKEN
SENDGRID_API_KEY=SG.YOUR_PRODUCTION_SENDGRID_KEY
SAMSARA_API_TOKEN=YOUR_PRODUCTION_SAMSARA_TOKEN
AIRTABLE_API_KEY=YOUR_PRODUCTION_AIRTABLE_KEY
MAPBOX_ACCESS_TOKEN=pk.YOUR_PRODUCTION_MAPBOX_TOKEN

# Testing Configuration (Disabled in Production)
TEST_DB_NAME=disabled_in_production
TEST_REDIS_DB=disabled_in_production
DISABLE_AUTH_FOR_TESTING=false

# Docker Data Paths
DATA_PATH=/var/lib/waste-management