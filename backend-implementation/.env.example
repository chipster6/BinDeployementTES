# ============================================================================
# WASTE MANAGEMENT BACKEND - ENVIRONMENT CONFIGURATION
# ============================================================================

# Application Settings
NODE_ENV=development
PORT=3001
API_VERSION=v1
APP_NAME=waste-management-api
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waste_management
DB_USERNAME=postgres
DB_PASSWORD=your_db_password
DB_SSL=false
# PRODUCTION-READY CONNECTION POOL CONFIGURATION
# Scaled from 20 to 120 connections for production load support
DB_POOL_MIN=10
DB_POOL_MAX=120
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=30000
# Enhanced connection pool monitoring settings
DB_POOL_EVICT=5000
DB_POOL_VALIDATE=true
DB_POOL_HANDLE_DISCONNECTS=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=waste_mgmt:
REDIS_TTL_DEFAULT=3600

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=RS256

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=waste-mgmt-files
AWS_S3_BUCKET_PHOTOS=waste-mgmt-photos
AWS_S3_BUCKET_DOCUMENTS=waste-mgmt-documents
AWS_CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@waste-mgmt.com
SENDGRID_FROM_NAME=Waste Management System

# Samsara Integration
SAMSARA_API_TOKEN=your_samsara_api_token
SAMSARA_BASE_URL=https://api.samsara.com/v1
SAMSARA_WEBHOOK_SECRET=your_samsara_webhook_secret

# Airtable Integration
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id
AIRTABLE_TABLE_CUSTOMERS=Customers
AIRTABLE_TABLE_CONTRACTS=Service Agreements

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# Security Settings
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12
MFA_ISSUER=Waste Management System
PASSWORD_RESET_TOKEN_EXPIRY=3600000
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=1800000

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# WebSocket Configuration
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGINS=http://localhost:3000

# Background Jobs
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
ENABLE_QUEUE_DASHBOARD=true
QUEUE_DASHBOARD_PORT=3003

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true

# Development Settings
ENABLE_SWAGGER_UI=true
ENABLE_API_DOCS=true
DEBUG_SQL=false
MOCK_EXTERNAL_SERVICES=false

# Testing Configuration (for test environment)
TEST_DB_NAME=waste_management_test
TEST_REDIS_DB=15
DISABLE_AUTH_FOR_TESTING=false

# Production Security (set in production)
FORCE_HTTPS=false
ENABLE_HELMET=true
HELMET_CSP_ENABLED=true
SECURE_COOKIES=false
TRUST_PROXY=false

# Performance Settings
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
REQUEST_SIZE_LIMIT=50mb
ENABLE_ETAG=true
ENABLE_CACHE_CONTROL=true

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_QUEUE_ENABLED=true

# Analytics & Metrics
ENABLE_METRICS_COLLECTION=true
METRICS_INTERVAL=60000
ENABLE_PERFORMANCE_MONITORING=true

# Compliance & Audit
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_COMPLIANCE_ENABLED=true
PCI_COMPLIANCE_ENABLED=true