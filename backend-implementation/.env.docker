# ============================================================================
# WASTE MANAGEMENT SYSTEM - DOCKER ENVIRONMENT CONFIGURATION
# ============================================================================
#
# Docker-specific environment variables for development
# Override these values in production deployments
#
# Created by: Infrastructure Agent
# Date: 2025-08-12
# Version: 1.0.0
# ============================================================================

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration (Docker services)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=waste_management
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_SSL=false

# Production-ready connection pool settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=30000
DB_POOL_EVICT=5000
DB_POOL_VALIDATE=true
DB_POOL_HANDLE_DISCONNECTS=true

# Redis Configuration (Docker service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_KEY_PREFIX=waste_mgmt:
REDIS_TTL_DEFAULT=3600

# Security Configuration
JWT_SECRET=dev-jwt-secret-change-in-production-please
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-please
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Encryption Configuration
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
HASH_ROUNDS=12
SESSION_SECRET=dev-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Development Settings
DEBUG_SQL=false
ENABLE_SWAGGER_UI=true
ENABLE_API_DOCS=true
MOCK_EXTERNAL_SERVICES=true
LOG_LEVEL=debug

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=false

# WebSocket Configuration
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGINS=http://localhost:3000

# Background Jobs Configuration
QUEUE_REDIS_HOST=redis
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
QUEUE_REDIS_PASSWORD=redis123
ENABLE_QUEUE_DASHBOARD=true
QUEUE_DASHBOARD_PORT=3003

# Monitoring & Logging
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Admin UI Configuration
PGADMIN_EMAIL=admin@waste-mgmt.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

REDIS_COMMANDER_PASSWORD=admin123
REDIS_COMMANDER_PORT=8081

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
GRAFANA_PORT=3004

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Data Storage Paths
DATA_PATH=./docker/data

# Testing Configuration
TEST_DB_NAME=waste_management_test
TEST_REDIS_DB=15
DISABLE_AUTH_FOR_TESTING=false

# External Services (Mock in development)
STRIPE_SECRET_KEY=sk_test_mock_key_for_development
TWILIO_ACCOUNT_SID=mock_twilio_sid
TWILIO_AUTH_TOKEN=mock_twilio_token
SENDGRID_API_KEY=mock_sendgrid_key
MAPBOX_ACCESS_TOKEN=mock_mapbox_token

# Performance Settings
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
REQUEST_SIZE_LIMIT=50mb
ENABLE_ETAG=true
ENABLE_CACHE_CONTROL=true

# Security Settings (Development)
FORCE_HTTPS=false
ENABLE_HELMET=true
HELMET_CSP_ENABLED=false
SECURE_COOKIES=false
TRUST_PROXY=false

# Compliance & Audit
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90
GDPR_COMPLIANCE_ENABLED=true