# ============================================================================
# WEAVIATE VECTOR DATABASE CONFIGURATION
# ============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=waste-mgmt-vector-key-${RANDOM_SUFFIX:-dev}
WEAVIATE_BATCH_SIZE=100
WEAVIATE_TIMEOUT=30000

# ============================================================================
# OPENAI INTEGRATION FOR VECTOR GENERATION
# ============================================================================
OPENAI_API_KEY=${OPENAI_API_KEY:-}
OPENAI_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=8192
OPENAI_TEMPERATURE=0.1

# ============================================================================
# OR-TOOLS ROUTE OPTIMIZATION (PHASE 2)
# ============================================================================
ORTOOLS_LICENSE_KEY=${ORTOOLS_LICENSE_KEY:-}
ORTOOLS_SOLVER_TIMEOUT=30000
ORTOOLS_MAX_VEHICLES=50

# ============================================================================
# GRAPHHOPPER TRAFFIC API (PHASE 2)
# ============================================================================
GRAPHHOPPER_API_KEY=${GRAPHHOPPER_API_KEY:-}
GRAPHHOPPER_BASE_URL=https://graphhopper.com/api/1
GRAPHHOPPER_TIMEOUT=15000

# ============================================================================
# LOCAL LLM CONFIGURATION (PHASE 4)
# ============================================================================
LLM_SERVICE_URL=http://localhost:8001
LLM_MODEL_PATH=/app/models/llama-3.1-8b
LLM_MAX_CONTEXT_LENGTH=8192
LLM_MAX_BATCH_SIZE=8
LLM_TIMEOUT=30000

# ============================================================================
# ML TRAINING CONFIGURATION
# ============================================================================
ML_TRAINING_DATA_PATH=/app/data/training
ML_MODEL_STORAGE_PATH=/app/models
ML_CACHE_PATH=/app/cache
ML_BATCH_SIZE=1000
ML_VALIDATION_SPLIT=0.2
ML_TEST_SPLIT=0.1

# ============================================================================
# AI/ML FEATURE FLAGS - PHASE 1 ACTIVATION
# ============================================================================
ENABLE_VECTOR_SEARCH=true
ENABLE_ROUTE_OPTIMIZATION_ML=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_LLM_ASSISTANCE=false
ENABLE_ML_AUDIT_LOGGING=true

# ============================================================================
# ML PERFORMANCE CONFIGURATION
# Performance-Optimization-Specialist coordination for <200ms SLA
# ============================================================================
ML_VECTOR_SEARCH_CACHE_TTL=3600
ML_PREDICTION_CACHE_TTL=1800
ML_MODEL_REFRESH_INTERVAL=86400000
ML_PERFORMANCE_MONITORING=true

# ============================================================================
# ENHANCED DATABASE CONFIGURATION FOR AI/ML
# Database-Architect coordination for vector storage optimization
# ============================================================================
DB_POOL_MAX_ML=180
DB_POOL_MIN_ML=30
DB_CONNECTION_TIMEOUT_ML=30000
DB_IDLE_TIMEOUT_ML=300000

# ============================================================================
# ENHANCED REDIS CONFIGURATION FOR AI/ML CACHING
# ============================================================================
REDIS_ML_PORT=6380
REDIS_ML_PASSWORD=${REDIS_PASSWORD:-redis123}
REDIS_ML_DB=0
REDIS_ML_NAMESPACE=ml:
REDIS_ML_MAX_MEMORY=2gb
REDIS_ML_EVICTION_POLICY=allkeys-lru

# ============================================================================
# AI/ML MONITORING AND LOGGING
# ============================================================================
ML_LOG_LEVEL=info
ML_PROMETHEUS_ENABLED=true
ML_PROMETHEUS_PORT=9090
ML_REQUEST_LOGGING=true
ML_PERFORMANCE_METRICS=true

# ============================================================================
# AI/ML SECURITY CONFIGURATION
# Security-Agent coordination for production hardening
# ============================================================================
ML_API_RATE_LIMIT_ENABLED=true
ML_API_KEY_ROTATION_ENABLED=true
ML_AUDIT_LOGGING_ENABLED=true
ML_ENCRYPTION_ENABLED=true
ML_TLS_ENABLED=true

# ============================================================================
# DEVELOPMENT/PRODUCTION ENVIRONMENT FLAGS
# ============================================================================
ML_DEBUG_MODE=${NODE_ENV:-development}
ML_ENABLE_SWAGGER=true
ML_ENABLE_METRICS_DASHBOARD=true
ML_ENABLE_HEALTH_CHECKS=true