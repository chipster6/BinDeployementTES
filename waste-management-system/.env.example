# Database
DATABASE_URL="postgresql://username:password@localhost:5432/waste_management_db"

# JWT Configuration - MUST BE 32+ CHARACTERS
JWT_SECRET="your-super-secure-64-character-jwt-secret-here-change-this-immediately"
JWT_EXPIRES_IN="24h"

# CSRF Protection
CSRF_SECRET="your-super-secure-32-character-csrf-secret-here-change-this"

# Encryption Keys
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
AIRTABLE_API_KEY="your-airtable-api-key"
AIRTABLE_BASE_ID="your-airtable-base-id"

SAMSARA_API_TOKEN="your-samsara-api-token"

TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"

STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT=3000
LOG_LEVEL="info"

# Monitoring
SECURITY_ALERT_EMAIL="security@yourcompany.com"
SECURITY_ALERT_WEBHOOK="https://your-monitoring-webhook-url"